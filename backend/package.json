{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for Raptbot project",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run clean:build && npm run copy:build && cd build && npm ci --production",
    "clean:build": "rimraf build",
    "copy:build": "node build-script.js",
    "package": "npm run build && cd build && tar -czf ../backend-build.tar.gz .",
    "prebuild": "echo Starting build process..."
  },
  "keywords": ["backend", "raptbot", "api"],
  "author": "Lakshya Dadhich",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "joi": "^18.0.1",
    "mongoose": "^8.18.3",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.6"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "rimraf": "^5.0.5"
  }
}